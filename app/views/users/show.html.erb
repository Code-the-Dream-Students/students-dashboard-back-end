<%= button_to 'Log Out', logout_path, method: :get , :class => "btn btn-primary"  %>

<div class="container" style="text-align:center; margin-top:100px;">
  <a href="/mentors">Go to Mentors</a>
  <a href="/">Go to Students</a>

  <div class="col-lg-12" >
  <h1><strong>All Users Table</h1> 
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">User ID</th>
        <th scope="col">User Name</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row">1</th>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>