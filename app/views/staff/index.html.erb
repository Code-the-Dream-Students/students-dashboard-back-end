<%= button_to 'Log Out', logout_path, method: :get , :class => "btn btn-primary"  %>

<div class="container" style="text-align:center; margin-top:100px;">
  <a href="/mentors">Go to Mentors</a>
  <a href="/">Go to Students</a>

  <div class="col-lg-12" >
  <h1><strong>Staff Table</h1> 
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">User ID</th>
        <th scope="col">Title</th>
        <th scope="col">User Name</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
      </tr>
    </thead>
    <tbody>
    <% @staff.each do |staff| %>
      <tr>
        <th scope="row">1</th>
        <td><%= staff.user.id %></td>
        <td><%= staff.user.username %></td>
        <td></strong><%= staff.title %></td>
        <td></strong><%= staff.first_name %></td>
        <td><%= staff.last_name %></td>
        <td><%= staff.user.email %></td>
        <td><%= staff.user.role %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>

