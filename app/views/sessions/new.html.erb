
 <div class="container" style="text-align:center; margin-top:100px;">

    <h1>Login</h1>   
    <%= form_tag '/login' do %>   
        <%= label_tag :username%>   
        <%= text_field_tag :username %><br>     
        <%= label_tag :password%>   
        <%= password_field_tag :password%><br>     
        <%= submit_tag "Login"%>
    <%end%>

</div>